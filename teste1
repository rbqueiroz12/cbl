import Foundation

print("7:30 Voce acordou")

print("Voce gostaria de tomar banho?")
var validAnswer = false

while validAnswer != true {
    print("Digite sim ou não")
    let resposta = readLine()
    if resposta == "sim" {
        validAnswer = true
        print("voce tomou banho")
} else if  resposta == "não" {
    validAnswer = true
    print("voce deixou para depois")
    }
}

